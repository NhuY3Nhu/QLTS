@model IEnumerable<ProjectQLTS.ThanhVien>

@{
    ViewBag.Title = "Thành viên";
}

<h2>THÀNH VIÊN</h2>

<p>

    @Html.AntiForgeryToken()

    @using (Html.BeginForm())
    {
<p>

    @Html.TextBox("SearchString")  <input type="submit" value="Tìm kiếm" /> @Html.ActionLink("Thêm thành viên", "Create")
    
</p>
    }

</p>
    <table class="table">
        <tr>
            
            <th>
                Họ tên
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                số điện thoại
            </th>
            
            <th>
                Hành động
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                
                <td>
                    <i class="glyphicon glyphicon-pencil"></i>@Html.ActionLink(" Sửa", "Edit", new { id = item.IDThanhVien }) |
                    <i class="glyphicon glyphicon-trash"></i>@Html.ActionLink(" Xóa", "Delete", new { id = item.IDThanhVien })
                </td>
            </tr>
        }

    </table>
