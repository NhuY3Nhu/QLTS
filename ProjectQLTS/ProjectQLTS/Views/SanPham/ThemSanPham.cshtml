
@{
    ViewBag.Title = "ThemSanPham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html>
<head>
    <title></title>
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <div>
        <h1 style="text-align:center">Thêm Sản Phẩm</h1>
        <table class="table table-borderless">
           
            <tbody>
                <tr>
                    <td style="font-size:25px">Ảnh đại diện:</td>
                    <td>
                        <input type="file" value="Chọn tệp" style="font-size:20px" />
                    </td>
                </tr>
                <tr>
                    <td style="font-size:25px">Tên sản phẩm:</td>
                    <td>
                        <input type="text" style="font-size:20px" />
                    </td>
                </tr>
                <tr>
                    <td style="font-size:25px">Loại sản phẩm:</td>
                    <td>
                        <select style="font-size:20px">
                            <option>Trà sữa</option>
                            <option>Trà trái cây</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td style="font-size:25px">Giá tiền:</td>
                    <td>
                        <input type="text" style="font-size:20px" />
                    </td>
                </tr>
                <tr>
                    
                    <td>
                        <button style="font-size:25px;float:right">Xác nhận</button>
                    </td>
                    <td>
                        <button style="font-size:25px">Hủy</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>

